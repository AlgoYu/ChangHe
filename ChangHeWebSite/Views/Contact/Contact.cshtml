@model ChangHeWebSite.Models.Dto.FrontDto
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="zh-CN">

<head>
    <title>@Model.CompanyDto.CompanyName</title>
    <meta charset="utf-8" />
    <meta name="keywords" content="@Model.CompanyDto.CompanyKeyWord" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/tf.css" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu/css/tf.css" />
    <link rel="stylesheet" type="text/css" href="/css/style1.css" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu/css/style1.css" />

</head>

<body>
    <!--头部视图渲染start-->
    @Html.Partial("_Header");
    <!--头部视图渲染end-->
    <div id="wrapper" class="about-page">
        <img src="/images/7htc.jpg" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu//images/7htc.jpg" class="about-page-img" />
    </div>
    <div class="about-us">
        <div class="container">
            <div class="row">
                <div class="col-sm-2">
                    <div class="cebian">
                        <img src="/images/ww.png" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu//images/ww.png" />
                        <div>
                            <div></div>
                            <h2>联系我们</h2>
                            <p>CONTACT</p>
                        </div>
                    </div>
                    <div class="ab-cebian"></div>
                    <div class="cebian-lianxi">
                        <div><strong>全国服务热线 :</strong></div>
                        <div><span>@Model.CompanyDto.CompanyPhone</span></div>
                        <div><strong>联系人:</strong>@Model.CompanyDto.CompanyContactPerson</div>
                        <div><strong>微信:</strong>@Model.CompanyDto.CompanyWeChat</div>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="bread-xie">
                        <a href="index.html" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu/index.html">首页</a>>><a href="">联系我们</a>
                    </div>
                    <div class="about-jianjie clearfix">
                        <div class="col-sm-6">
                            <div id="mapContainer" style="width: 100%; height: 240px;border: #2f4056 solid 1px;">

                            </div>
                        </div>
                        <div class="col-sm-6 lianxi">
                            <div>
                                <strong>地址：</strong>
                                @Model.CompanyDto.CompanyLocation
                            </div>
                            <div>
                                <strong>电话：</strong>
                                @Model.CompanyDto.CompanyPhone
                            </div>
                            <div>
                                <strong>联系人：</strong>
                                @Model.CompanyDto.CompanyContactPerson
                            </div>
                            <div>
                                <strong>微信：</strong>
                                @Model.CompanyDto.CompanyWeChat
                            </div>
                            <div>
                                <strong>QQ：</strong>
                                @Model.CompanyDto.CompanyQQ
                            </div>
                            <div>
                                <strong>邮箱：</strong>
                                @Model.CompanyDto.CompanyEmail
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--底部渲染start-->
    @Html.Partial("_Bottom");
    <!--底部渲染end-->

</body>
<script type="text/javascript" src="js/jquery.min.js" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu/js/jquery.min.js"></script>
<script type="text/javascript" src="js/bootstrap.min.js" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu/js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/main.js" tppabs="http://www.17sucai.com/preview/850167/2017-12-22/kunshanwuliu/js/main.js"></script>
<script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=ZwMXv7df2oHTRqS33EXtfTlMGpaphY66"></script>
<script>
    var map = new BMap.Map("mapContainer");
    var point = new BMap.Point(@Model.CompanyDto.Lng, @Model.CompanyDto.Lat);
    var marker = new BMap.Marker(point);        // 创建标注
    map.addOverlay(marker);                     // 将标注添加到地图中
    map.centerAndZoom(point, 15);
    map.enableScrollWheelZoom(true);     //开启鼠标滚轮缩放
    window.setTimeout(function(){
        map.panTo(point);
    }, 500);
</script>
</html>